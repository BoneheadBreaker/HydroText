<Window x:Class="CrillyText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrillyText"
        mc:Ignorable="d"
        Title="Hydro Text" Height="450" Width="800">
    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="401*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="187*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="MainTextBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" FontSize="14" Margin="10,10,10,10" Background="#FF252525" Foreground="White" TextChanged="MainTextBox_TextChanged" Grid.Row="1" Grid.ColumnSpan="2"/>
        <DockPanel Background="#FF191919" LastChildFill="False" Margin="0,0,0,3" Grid.ColumnSpan="2">
        </DockPanel>
        <Menu Background="#FF191919" Grid.ColumnSpan="2">
            <MenuItem x:Name="FileMenu" Header="File" FontSize="20" Foreground="White">
                <MenuItem x:Name="OpenFolder" Header="open" Click="MenuItem_Click" FontSize="12" Foreground="White" Background="Black"/>
                <MenuItem x:Name="SaveFolder" Header="Save" Background="Black" Foreground="White" Click="SaveFolder_Click"/>
                <MenuItem x:Name="SaveAsFolder" Header="Save As" Click="SaveAsFolder_Click" Background="Black" Foreground="White"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
